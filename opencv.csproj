<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="images\**" />
    <EmbeddedResource Remove="images\**" />
    <None Remove="images\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\haarcascade_eye_tree_eyeglasses.xml" />
    <None Remove="Resources\haarcascade_frontalface_alt2.xml" />
    <None Remove="Resources\haarcascade_frontalface_alt_tree.xml" />
    <None Remove="Resources\haarcascade_fullbody.xml" />
    <None Remove="Resources\haarcascade_profileface.xml" />
    <None Remove="Resources\haarcascade_smile.xml" />
    <None Remove="Resources\icon.ico" />
    <None Remove="Resources\none.jpg" />
    <None Remove="Resources\opencv_logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\haarcascade_eye_tree_eyeglasses.xml" />
    <EmbeddedResource Include="Resources\haarcascade_frontalface_alt2.xml" />
    <EmbeddedResource Include="Resources\haarcascade_frontalface_alt_tree.xml" />
    <EmbeddedResource Include="Resources\haarcascade_fullbody.xml" />
    <EmbeddedResource Include="Resources\haarcascade_profileface.xml" />
    <EmbeddedResource Include="Resources\haarcascade_smile.xml" />
    <EmbeddedResource Include="Resources\none.jpg" />
    <EmbeddedResource Include="Resources\opencv_logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpenCvSharp4" Version="4.4.0.20200915" />
    <PackageReference Include="OpenCvSharp4.runtime.win" Version="4.4.0.20200915" />
    <PackageReference Include="Portia.Roslyn.CheckedException" Version="1.4.7443.28334" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>